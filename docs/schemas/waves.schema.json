{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/waves.schema.json",
  "title": "Waves",
  "type": "object",
  "required": [
    "version",
    "waves"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "waves": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "waveNumber",
          "spawns"
        ],
        "properties": {
          "chapterId": {
            "type": "string",
            "pattern": "^chapter_[a-z0-9_]+$",
            "default": "chapter_1"
          },
          "waveNumber": {
            "type": "integer",
            "minimum": 1
          },
          "isBoss": {
            "type": "boolean",
            "default": false
          },
          "prepareTime": {
            "type": "number",
            "minimum": 0,
            "default": 12
          },
          "spawns": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "time",
                "enemyId",
                "count"
              ],
              "properties": {
                "time": {
                  "type": "number",
                  "minimum": 0
                },
                "enemyId": {
                  "type": "string",
                  "minLength": 1,
                  "pattern": "^[a-z][a-z0-9_\\-\\.]*$",
                  "description": "lower_snake_case 권장. 예: knight_sword, fire_mage"
                },
                "count": {
                  "type": "integer",
                  "minimum": 1
                },
                "interval": {
                  "type": "number",
                  "minimum": 0,
                  "default": 0.6
                }
              },
              "additionalProperties": false
            }
          },
          "reward": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "Gold",
                  "RelicChoice",
                  "Heal",
                  "BossChest"
                ],
                "default": "Gold"
              },
              "amount": {
                "type": "number",
                "minimum": 0
              },
              "choices": {
                "type": "integer",
                "minimum": 1,
                "maximum": 5,
                "default": 3
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

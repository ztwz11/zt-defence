{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/enemies.schema.json",
  "title": "Enemies",
  "type": "object",
  "required": [
    "version",
    "enemies"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "enemies": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "stats"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-z][a-z0-9_\\-\\.]*$",
            "description": "lower_snake_case 권장. 예: knight_sword, fire_mage"
          },
          "name": {
            "type": "string"
          },
          "stats": {
            "type": "object",
            "required": [
              "hp",
              "moveSpeed"
            ],
            "properties": {
              "hp": {
                "type": "number",
                "minimum": 1
              },
              "moveSpeed": {
                "type": "number",
                "minimum": 0
              },
              "armor": {
                "type": "number",
                "minimum": 0,
                "default": 0
              },
              "resist": {
                "type": "number",
                "minimum": 0,
                "default": 0
              }
            },
            "additionalProperties": false
          },
          "leakDamage": {
            "type": "integer",
            "minimum": 1,
            "default": 1
          },
          "rewardGold": {
            "type": "number",
            "minimum": 0,
            "default": 0.5
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
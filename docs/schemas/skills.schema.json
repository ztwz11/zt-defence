{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/skills.schema.json",
  "title": "Skills",
  "type": "object",
  "required": [
    "version",
    "skills"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "skills": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "trigger",
          "effects"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-z][a-z0-9_\\-\\.]*$",
            "description": "lower_snake_case 권장. 예: knight_sword, fire_mage"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "trigger": {
            "type": "string",
            "enum": [
              "Passive",
              "OnAttack",
              "OnHit",
              "OnKill",
              "OnWaveStart",
              "Active"
            ]
          },
          "cooldown": {
            "type": "number",
            "minimum": 0,
            "default": 0
          },
          "chance": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 1
          },
          "target": {
            "type": "string",
            "enum": [
              "enemy",
              "ally",
              "self",
              "area"
            ],
            "default": "enemy"
          },
          "effects": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "type"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "Damage",
                    "Heal",
                    "ApplyStatus",
                    "BuffStat"
                  ]
                },
                "amount": {
                  "type": "number"
                },
                "multiplier": {
                  "type": "number"
                },
                "damageType": {
                  "type": "string",
                  "enum": [
                    "physical",
                    "magic",
                    "true"
                  ],
                  "default": "physical"
                },
                "statusId": {
                  "type": "string",
                  "minLength": 1,
                  "pattern": "^[a-z][a-z0-9_\\-\\.]*$",
                  "description": "lower_snake_case 권장. 예: knight_sword, fire_mage"
                },
                "duration": {
                  "type": "number",
                  "minimum": 0
                },
                "stat": {
                  "type": "string",
                  "enum": [
                    "atk",
                    "hp",
                    "atkSpeed",
                    "range"
                  ]
                },
                "value": {
                  "type": "number"
                },
                "valueType": {
                  "type": "string",
                  "enum": [
                    "flat",
                    "percent"
                  ],
                  "default": "flat"
                }
              },
              "additionalProperties": false
            }
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}